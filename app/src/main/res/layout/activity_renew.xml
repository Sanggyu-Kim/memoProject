<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll3">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/renewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write your title"
                    android:maxLines="1"
                    android:layout_marginTop="28dp"
                    tools:layout_editor_absoluteX="0dp"/>

            <EditText
                    app:layout_constraintTop_toBottomOf="@id/createTitle"
                    android:id="@+id/renewMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Write your Message"
                    android:minHeight="350dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


    <Button
            app:layout_constraintBottom_toBottomOf="@id/scroll3"
            app:layout_constraintRight_toRightOf="@id/scroll3"
            android:id="@+id/commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="commit"
    />
</android.support.constraint.ConstraintLayout>